%section
  .container
    .row
      .col-med-10-md-offset-1
        = bootstrap_form_for [@herb], html: {class: "form-horizontal"} do |f|
          %fieldset
            = f.text_field :name
            = f.text_field :latin_name
            = f.text_area :description
            = f.text_field :tag_list
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit(@herb.new_record? ? 'Add Herb' : 'Update Herb', class: 'btn btn-default')
